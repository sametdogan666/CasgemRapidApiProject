@model List<CasgemRapidApi.Models.ExchangeViewModel.Exchange_Rates>

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<h1>TL Kur Listesi</h1>

<form method="get">
    <label>Döviz Kuru Kodu</label>
    <input  type="text" name="param"/>
    <button class="btn btn-outline-warning">Getir</button>
    <div class="container">
        <br/>
        <table class="table table-hover">
            <tr>
                <th>Döviz</th>
                <th>Miktar</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.currency</td>
                    <td>@item.exchange_rate_buy</td>
                </tr>
            }
        </table>
    </div>
</form>
