@model List<LocationCityNameViewModel>

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="get">
    <div class="container">
        <br /><br />
        <label>Şehir Adını Giriniz</label>

        <input type="text" name="cityName" class="form-control"/>

        <br />
        <button class="btn btn-dark">Şehir ID Getir</button>
        <br /><br />
        <h2>@ViewBag.CityName</h2>
        <br />
        <table class="table table-hover">

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.dest_id</td>
                </tr>
            }
        </table>
    </div>
</form>